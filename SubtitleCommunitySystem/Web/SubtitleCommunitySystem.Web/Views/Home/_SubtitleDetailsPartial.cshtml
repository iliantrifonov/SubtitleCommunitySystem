@using SubtitleCommunitySystem.Web.ViewModels

@model SubtitleDetailViewModel

<div class="row">
    <div class="row well">
        <img src='@Model.BannerUrl' alt='@Model.Name' style='width:100%;max-height:140px;' />
    </div>
    <div class="row">
        <div class="col-md-3">
            <img src='@Model.MainPosterUrl' alt='@Model.Name' style='max-width:280px;height:350px;' />
        </div>
        <div class="col-md-9">
            <div class="row">
                <h2>@Model.Name (@Model.Language)</h2>
            </div>
            <div class="row">
                Translated by "@Model.TeamName"
            </div>
            <div class="row">
                <div class="col-md-6 alert alert-info">
                    @Model.Description
                </div>
            </div>
        </div>
    </div>
</div>
