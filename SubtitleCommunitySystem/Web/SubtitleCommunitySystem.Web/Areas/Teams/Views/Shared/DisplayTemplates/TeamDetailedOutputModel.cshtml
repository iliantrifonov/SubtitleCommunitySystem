@model SubtitleCommunitySystem.Web.Areas.Teams.Models.TeamDetailedOutputModel

<div class="row">
    <div class="col-md-12 text-center well-sm">
        <h2>Team "@Model.Name"</h2>
        <h6>Language: @Model.Language</h6>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Team Leaders:</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    @foreach (var member in Model.TeamLeaders)
                    {
                        <a href="#" class="list-group-item">
                            @Html.DisplayFor(m => member, member)
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Translators:</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    @foreach (var member in Model.Translators)
                    {
                        <a href="#" class="list-group-item">
                            @Html.DisplayFor(m => member, member)
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Revisioners:</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    @foreach (var member in Model.Revisioners)
                    {
                        <a href="#" class="list-group-item">
                            @Html.DisplayFor(m => member, member)
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Syncs:</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    @foreach (var member in Model.Syncs)
                    {
                        <a href="#" class="list-group-item">
                            @Html.DisplayFor(m => member, member)
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Image Managers:</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    @foreach (var member in Model.ImageManagers)
                    {
                        <a href="#" class="list-group-item">
                            @Html.DisplayFor(m => member, member)
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">

    </div>
</div>
